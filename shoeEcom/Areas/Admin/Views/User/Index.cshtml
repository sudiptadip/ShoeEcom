@model List<ApplicationUser>

<div class="container" >
    <div class="row mt-5" >
        <h4 class="text-center" >Users List</h4>
        <table id="myTable" class="table table-striped border mt-5 mb-3">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Registration</th>
                    <th>View Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.FirstName @item.LastName</th>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.CreatedOn</td>
                        <td>
                            <a asp-action="UserDetails" asp-controller="User" asp-route-userId="@item.Id" class="btn btn-sm btn-primary" >
                                View Profile
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}