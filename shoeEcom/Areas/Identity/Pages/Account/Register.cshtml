<div id="MainContent" class="content-for-layout">
    <div class="login-page mt-100">
        <div class="container">
            <form id="registerForm" style="max-width: 564px !important" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-form common-form mx-auto">
                <div class="section-header mb-3">
                    <h2 class="section-heading text-center">Register</h2>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <fieldset>
                            <label asp-for="Input.FirstName" class="label">First name</label>
                            <input asp-for="Input.FirstName" class="p-2" type="text" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-md-6">
                        <fieldset>
                            <label asp-for="Input.LastName" class="label">Last name</label>
                            <input asp-for="Input.LastName" class="p-2" type="text" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-12">
                        <fieldset>
                            <label asp-for="Input.Email" class="label">Email address</label>
                            <input class="p-2" asp-for="Input.Email" class="p-2" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-12">
                        <fieldset>
                            <label asp-for="Input.Password" class="label">Password</label>
                            <input class="p-2" asp-for="Input.Password" class="p-2" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-12">
                        <fieldset>
                            <label asp-for="Input.ConfirmPassword" class="label">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="p-2" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </fieldset>
                    </div>
                    <div class="col-12">
                        <fieldset>
                            <label asp-for="Input.Role" class="label">Select Role</label>
                            <select asp-for="Input.Role" asp-items="@Model.Input.RoleList" class="p-2" >
                                <option selected disabled >Select Role</option>
                            </select>
                        </fieldset>
                    </div>
                    <div class="col-12 mt-3">
                        <button type="submit" class="btn-primary d-block mt-3 btn-signin">CREATE</button>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn-secondary mt-2 btn-signin">LOGIN</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



